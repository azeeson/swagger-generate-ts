{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["es2017", "es7", "es6", "dom"],
        "moduleResolution": "node",
        "declaration": true,
        "outDir": "lib",
        "strict": false,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "preserveConstEnums": true,
        "noImplicitReturns": true,
        "noImplicitThis": false
    },
    "include": ["src"],
    "exclude": [
        "node_modules",
        "lib"
    ]
}